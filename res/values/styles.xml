<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:titleTextStyle">@style/AppTitleTextStyle</item>
    </style>

    <style name="AppTitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
